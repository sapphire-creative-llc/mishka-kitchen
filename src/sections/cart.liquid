{% style %}
  .cart-color { color: {{ section.settings.cart_text_color }} }
  .cart-color-bg { background-color: {{ section.settings.cart_text_color }} }
  .cart-bg-color { background-color: {{ section.settings.cart_bg_color }} }
  .cart-bg-color-color { color: {{ section.settings.cart_bg_color }} }
  .cart-border-color { border-color: {{ section.settings.cart_text_color }} }
{% endstyle %}

<div class="cart-wrapper fixed t0 b0 r0 z10 scroll-y">
  <div class="flex flex-column h100p cart-bg-color rounded-left cart-color">
    <div class="pad-cart-close text-right">
      <svg class="js-cart-trigger pointer inline-block v-middle cart-color" xmlns="http://www.w3.org/2000/svg" width="15" height="15" viewBox="0 0 15 15">
        <polygon points="7.5 8.5 1 14.9 0 13.9 6.5 7.5 0 1 1 0 7.5 6.5 14 0 15 1 8.5 7.5 15 14 14 15" fill="currentColor"/>
      </svg>
    </div>
    <div class="cart-padding flex-1">
      <p class="js-sidebar-count cart-color mb2">0 Items in Cart</p>
      <p class="js-cart-error hide mt0 mb2 red border border-red p1 h5"></p>
      <div class="cart-items"></div>
      <div class="js-shipping flex items-center justify-between mt3 pt1 border-top cart-border-color h4">
        <span class="js-shipping-name"></span>
        <span class="js-shipping-cost">{{ shipping_method.handle }}</span>
      </div>
      <div class="js-subtotal flex items-center justify-between mt1 pt1 border-top cart-border-color h4">
        <span>Subtotal</span>
        <span class="js-subtotal-cost"></span>
      </div>
    </div>
    <div class="cart-padding py2">
      <a href="/checkout" class="js-view-cart flex justify-center rounded cart-color-bg hover-opacity-7 py1 px2 cart-bg-color-color no-underline">
        Checkout
      </a>
      <a href="/collections/shop" class="js-shop-collection rounded flex justify-center border cart-border-color py1 px2 cart-color no-underline hover-border-gray">
        Shop {{ shop.name }}
      </a>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Cart",
    "settings": [
      {
        "id": "cart_text_color",
        "type": "color",
        "label": "Text color",
        "default": "#ffffff"
      },
      {
        "id": "cart_bg_color",
        "type": "color",
        "label": "Background color",
        "default": "#5DA594"
      }
    ]
  }
{% endschema %}
