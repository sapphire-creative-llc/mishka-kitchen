<div class="instagram text-center py6 w100p">
  <h3 class="mt0 mb1 text-normal">{{ section.settings.title }}</h5>
  <p class="mt0 h5 dark-gray mb3">{{ section.settings.description }}</p>
  <div class="flex-md">
    <div class="image-wrapper flex-1">
      <div class="image bg-center bg-cover fade-image rounded" style="padding-top: 100%;" data-img="{{ section.settings.image1 | img_url: '800x' }}"></div>
    </div>
    <span class="block pl1"></span>
    <div class="image-wrapper flex-1">
      <div class="image bg-center bg-cover fade-image rounded" style="padding-top: 100%;" data-img="{{ section.settings.image2 | img_url: '800x' }}"></div>
    </div>
    <span class="block pl1 show-md"></span>
    <div class="image-wrapper flex-1">
      <div class="image bg-center bg-cover fade-image rounded" style="padding-top: 100%;" data-img="{{ section.settings.image3 | img_url: '800x' }}"></div>
    </div>
    <span class="block pl1"></span>
    <div class="image-wrapper flex-1">
      <div class="image bg-center bg-cover fade-image rounded" style="padding-top: 100%;" data-img="{{ section.settings.image4 | img_url: '800x' }}"></div>
    </div>
  </div>
  <a href="{{ section.settings.button_link }}" target="_blank" class="button h5 no-underline text-uppercase bg-teal rounded white no-border mt3 inline-block">
    {{ section.settings.button_text }}
  </a>
</div>

{% schema %}
  {
    "name": "Instagram",
    "settings": [
      {
        "id": "title",
        "type": "text",
        "label": "Title"
      },
      {
        "id": "description",
        "type": "text",
        "label": "Description"
      },
      {
        "id": "image1",
        "type": "image_picker",
        "label": "Image 1"
      },
      {
        "id": "image2",
        "type": "image_picker",
        "label": "Image 2"
      },
      {
        "id": "image3",
        "type": "image_picker",
        "label": "Image 3"
      },
      {
        "id": "image4",
        "type": "image_picker",
        "label": "Image 4"
      },
      {
        "id": "button_link",
        "type": "url",
        "label": "Button link"
      },
      {
        "id": "button_text",
        "type": "text",
        "label": "Button text"
      }
    ]
  }
{% endschema %}
