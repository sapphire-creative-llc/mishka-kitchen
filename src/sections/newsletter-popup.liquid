<div class="js-popup newsletter-popup fixed t0 l0 r0 b0 flex items-center z10 hidden">
  <div class="popup-box bg-white w100p flex-md z2 rounded">
    <div class="popup-image">
      <div class="w100p h100p bg-top bg-cover bg-no-repeat rounded-left" style="background-image: url({{ section.settings.image | img_url: '600x' }})">
      </div>
    </div>
    <div class="popup-content border-box relative">
      <svg class="js-close-popup close-icon pointer absolute r1 t1" xmlns="http://www.w3.org/2000/svg" width="15" height="15" viewBox="0 0 15 15">
        <polygon points="7.5 8.5 1 14.9 0 13.9 6.5 7.5 0 1 1 0 7.5 6.5 14 0 15 1 8.5 7.5 15 14 14 15" fill="currentColor"/>
      </svg>
      <h2 class="text-normal m0">{{ section.settings.heading }}</h2>
      <p class="mt0 medium-gray h5">{{ section.settings.description }}</p>
      {% include 'popup-signup' %}
      <div class="mt2">
        <p class="h5 mt0 mb1 dark-teal">Find us online:</p>
        {% include 'social-icons' %}
      </div>
    </div>
  </div>
  <div class="js-close-popup absolute t0 l0 r0 b0 z1"></div>
</div>

{% schema %}
  {
    "name": "Newsletter popup",
    "settings": [
      {
        "type": "image_picker",
        "id": "image",
        "label": "Image"
      },
      {
        "type": "text",
        "id": "heading",
        "label": "Heading"
      },
      {
        "type": "text",
        "id": "description",
        "label": "Description"
      }
    ]
  }
{% endschema %}
