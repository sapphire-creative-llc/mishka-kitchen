{% paginate blog.articles by 5 %}
  {%- assign blog_title = blog.title -%}
  <div class="grid">
    <div class="blog-wrapper mx-auto">
      {% if current_tags %}
        {% capture blog_title %}
          <div class="blog-heading">
            {{ blog.title | link_to: blog.url }} &mdash; {{ current_tags.first }}
          </div>
        {% endcapture %}
      {% endif %}

      <div class="text-center">
        <h2 class="text-normal pt-sans-bold red m0">{{ blog_title }}</h2>
      </div>

      <div class="overflow-hidden">
        <div class="right blog-right border-box">
          {% for article in blog.articles %}
            <h2 class="mb1">
              <a class="red no-underline" href="{{ article.url }}">
                {{ article.title }}
              </a>
            </h2>
            <div class="flex-md border-bottom border-smoke pb2 mb2 clip">
              <a class="w20p mr1" href="{{ article.url }}">
                <img src="{{ article.image.src | img_url: '300x' }}">
              </a>
              <div class="w80p">
                {% capture date %}
                  {{ article.published_at | time_tag: format: 'month_day_year' }}
                {% endcapture %}
                <p class="medium-gray h5 m0">
                  {{ 'blogs.article.author_on_date_html' | t: author: article.author, date: date }}
                </p>
                {% if article.excerpt.size > 0 %}
                  {{ article.excerpt }}
                {% else %}
                  <p class="dark-gray">
                    {{ article.content | strip_html | truncatewords: 30 }}
                    <a href="{{ article.url }}" class="dark-teal no-underline">
                      {{ 'blogs.article.read_more' | t }}
                    </a>
                  </p>
                {% endif %}
              </div>
            </div>
          {% endfor %}
        </div>
        {% if blog.all_tags.size > 0 %}
        <div class="left blog-left">
          <h4>{{ 'blogs.general.categories' | t }}</h4>
          <ul class="blog-tags-list h4">
            {% for tag in blog.all_tags %}
              {% if current_tags contains tag %}
                <li>{{ tag }}</li>
              {% else %}
                <li>{{ tag | link_to_tag: tag }}</li>
              {% endif %}
            {% endfor %}
          </ul>
        </div>
        {% endif %}
      </div>
      <div class="pagination text-center py4">
        {% if paginate.pages > 1 %}
          {% include 'pagination' %}
        {% endif %}
      </div>
    </div>
  </div>

{% endpaginate %}
